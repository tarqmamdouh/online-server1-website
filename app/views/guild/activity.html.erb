          <ul class="nk-social-activity">
            <!-- START: form -->
            <li>
              <% if @admin != -1 %>
                <div class="nk-social-activity-avatar">
                  <a href="../characters/<%= @master[:charname]%>"><img src="../assets/guild/chars/<%= @master[:refobjid] %>" alt="nK"></a>
                </div>

                <div class="nk-social-activity-content">


                  <div id="app-errors">
                    <% flash.each do |key, value| %>
                      <% if key == "notice" || key == "success" %>
                        <h5 style=" color : #00962c"><%= value %></h5>
                      <% else %>
                        <h5 style=" color : #d50005"><%= value %></h5>
                      <% end %>
                    <% end %>
                  </div>



                  <%= form_tag @activity,  method: :put, url: [@activity, :post_activity] do |f| %>
                    <%= text_area_tag :update_text, params[:update_text], class: "form-control", placeholder: "What's new in " + @guildname + " ?", rows: "4", autofocus: true %>
                    <div class="nk-gap"></div>
                    <%= button_tag  "Post Update", class: "nk-btn link-effect-4 float-right", type: :submit  %>
                  <% end %>
                </div>
              <% end %>


            </li>
            <!-- END: form -->

            <% @activities.each do |act| %>
              <!-- START: post -->
              <li>
                <div class="nk-social-activity-avatar">
                  <a href="../characters/<%= @master[:charname]%>"><img src="../assets/guild/chars/<%= @master[:refobjid] %>" alt="nK"></a>
