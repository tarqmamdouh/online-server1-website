                    <a href="../characters/<%= @master[:charname]%>"> <%= @master[:charname] %></a> posted an update - <a href="#" class="nk-social-activity-meta-time"><%= time_ago_in_words(act[:createdat]) %> ago</a>
                  </div>
                  <div class="nk-social-activity-text">
                    <%= act[:body] %>
                  </div>
                </div>
              </li>
              <!-- END: post -->
            <% end %>

          </ul>
          <!-- END: Activity -->
        </div>





































