<h1>Edit existing a frequently asked question and its answer</h1>
<%= render 'shared/errors', obj: @faq %>

<%= form_for(@faq,:html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">

    <div class="control-label col-sm-2">

      <%= f.label :question %>

    </div>

    <div class="col-sm-8">

      <%= f.text_area :question, rows: 10, class: "form-control", placeholder: "question" %>

    </div>

  </div>
  <div class="form-group">

    <div class="control-label col-sm-2">

      <%= f.label :answer %>

    </div>

    <div class="col-sm-8">

      <%= f.text_area :answer, rows: 10, class: "form-control", placeholder: "answer for the question" %>

    </div>

  </div>

  <div class="form-group">

    <div class="col-sm-offset-2 col-sm-10">

      <%= f.submit class: 'btn btn-primary btn-lg' %>

    </div>

  </div>

<% end %>

<div class="col-xs-4 col-xs-offset-4">

  [ <%= link_to "Cancel request and return to articles listing", faq_index_path %> ]

</div>