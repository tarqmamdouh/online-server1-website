                <%#= link_to , users_path(@current_user), "test<span>*</span>".html_safe %>
                <li><a href="<%= user_preferences_path %>"><i class="fa fa-user"></i> <%= current_user.username %></a></li>

                <% if current_user.seller? %>
                  <li><a href="#"><i class="fa  fa-usd"></i> <%= current_user.pins %></a></li>
                <% end %>

                <li>
                  <%= link_to destroy_user_session_path, :method => :delete  do %>
                  <i class="fa fa-sign-in"></i>logout
                  <% end %>
                </li>
              </ul>

            <% else %>
              <ul class="user-link nav justify-content-end">
                <li><a href="../users/sign_in"><i class="fa fa-user"></i>Login</a></li>
                <li><a href="../users/sign_up"><i class="fa fa-sign-in"></i>Sign Up</a></li>
              </ul>
            <% end %>

