<header id="header" class="header-one">
  <div class="top-menu">
    <div class="container">
      <div class="top-menu-wrap">
        <div class="row">
          <div class="col-md-8">
            <div class="top-menu-left">
              <ul class="head-social-link">
                <li><a href="https://www.facebook.com/ZOnline2018" target="_blank"><i class="fa fa-facebook"></i></a></li>
                <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                <li><a href="https://discord.gg/cbpJ7fJ" target="_blank"><i class="fab fa-discord"></i></a></li>
              </ul>
              <!-- /.head-social-link -->
            </div>
            <!-- /.top-menu-left -->


            <div class="header-text">
              <span class="tour-title">Announcements</span>
              <h4 class="ah-headline">
                 <span class="ah-words-wrapper">
                     <% @announcements.each do |article| %>
                       <% if @announcements.first == article %>
                        <b class="is-visible"><%= article.title %></b>
                       <% else %>
                        <b><%= article.title %></b>
                       <% end %>
                     <% end %>
                 </span>
              </h4>
