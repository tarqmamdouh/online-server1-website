</div>

<div class="switch-top">
  <p>Back To Top</p>
  <a href="#main_content" data-type="section-switch" class="return-to-top">
    <i class="fa fa-angle-double-up"></i>
  </a>
</div>

<div id="main_content">

  <%= render "welcome/Navbar" %>

  <!--=========================-->
  <!--=        Banner         =-->
  <!--=========================-->
  <section id="page-header" data-bg-image="../assets/media/background/z6.jpg">
    <div class="container">
      <div class="page-title-wrap">
        <div class="page-title-inner">
          <h1>Unique Ranking</h1>
          <span class="delemitter" data-bg-image="..assets/media/banner/s1.png"></span>
        </div>
        <!-- /.page-title-inner -->
      </div>
      <!-- /.page-title-wrap -->
    </div>
    <!-- /.container -->
  </section>
  <!-- /#page-header -->

  <!--========================================-->
  <!--=        Blog Grid Four Column         =-->
  <!--========================================-->
  <section id="latest-news-clan" class="mt__50">
    <div class="container">
      <div class="games-bg">
        <div class="games-title">
          <h3>Top Unique Hunters</h3>
        </div>

        <div class="games-inner">

          <% @ranking.each_with_index do |row, i| %>

            <% if row == @ranking.first %>
              <div class="top-games-item clearfix">
                <div class="game-user">
                  <a href="../characters/<%= row[:charname16] %>" class="uthumb"><img src="../assets/media/ranks/1.png" alt="Thumb"></a>
                  <div class="content">
                    <h3 style=" margin-top: 12px;"><a href="../characters/<%= row[:charname16] %>" style="font-size: 20px;"><%= row[:charname16] %></a></h3>
                  </div>
                </div>

                <div class="match">
                  <h3 style="font-size: 22px;">Points</h3>
                  <h4 style="font-size: 20px;"><%= row[:points] %></h4>
                </div>

              </div>
              <!-- /.top-games-item -->
            <% elsif row == @ranking.second %>
              <div class="top-games-item clearfix">
                <div class="game-user">
                  <a href="../characters/<%= row[:charname16] %>" class="uthumb"><img src="../assets/media/ranks/2.png" alt="Thumb"></a>
                  <div class="content">
                    <h3 style=" margin-top: 12px;"><a href="../characters/<%= row[:charname16] %>" style="font-size: 20px;"><%= row[:charname16] %></a></h3>
                  </div>
                </div>

                <div class="match">
                  <h3 style="font-size: 22px;">Points</h3>
                  <h4 style="font-size: 20px;"><%= row[:points] %></h4>
                </div>

              </div>
              <!-- /.games-inner -->
            <% elsif row == @ranking.third %>
              <div class="top-games-item clearfix">
                <div class="game-user">
                  <a href="../characters/<%= row[:charname16] %>" class="uthumb"><img src="../assets/media/ranks/3.png" alt="Thumb"></a>
                  <div class="content">
                    <h3 style=" margin-top: 12px;"><a href="../characters/<%= row[:charname16] %>" style="font-size: 20px;"><%= row[:charname16] %></a></h3>
                  </div>
                </div>

                <div class="match">
                  <h3 style="font-size: 22px;">Points</h3>
                  <h4 style="font-size: 20px;"><%= row[:points] %></h4>
                </div>

              </div>
              <!-- /.games-inner -->
            <% else %>
              <div class="top-games-item clearfix">
                <div class="game-user">
                  <a href="../characters/<%= row[:charname16] %>" class="uthumb" style="font-size: 60px; margin-left: 12px;margin-top: 7px; overflow: visible;"> <%= i+1 %> </a>
                  <div class="content">
                    <h3 style=" margin-top: 12px;"><a href="#" style="font-size: 20px;"><%= row[:charname16] %></a></h3>
                  </div>
                </div>

                <div class="match">
                  <h3 style="font-size: 22px;">Points</h3>
                  <h4 style="font-size: 20px;"><%= row[:points] %></h4>
                </div>

              </div>
              <!-- /.games-inner -->
            <% end %>
          <% end %>

        </div>



      </div>

      <div class="row" style="height: 100px">
      </div>
    </div>
    <!-- /.container -->
  </section>
  <!-- /#latest-news -->

  <%= render "welcome/Footer" %>

</div>
