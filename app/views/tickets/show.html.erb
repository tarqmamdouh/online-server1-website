<%= render 'layouts/adminNavbar'%>
<%= javascript_include_tag 'Attachments' %>
<%= javascript_include_tag 'init_attachinary' %>


<%if current_user.admin? || current_user.support? %>
  <% if @ticket.status? %>
    <%= button_to "Close this ticket", {action: "close_ticket", id: @ticket.id }, method: :put,data: {confirm: "Are you sure you want to close this ticket??!"} %>
<%end %>
<% end %>

<h2 align="center">Subject: <%= @ticket.subject%></h2>




<div class="well col-xs-8 col-xs-offset-2">
  <% if @ticket.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:</li>
          <li class="article-title">
            <%= link_to @ticket.user.username %>
          </li>
          <li><small>
            <%= pluralize(@ticket.user.tickets.count, "ticket") if @ticket.user.tickets %>
          </small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="center description"><strong>Content:</strong></h4>
  <hr>
  <%= simple_format(@ticket.content) %>
  <div class="article-actions">

    <%= link_to "View all tickets", tickets_path, class: "btn btn-xs btn-success" %>
  </div>
  <%#comments %>
  <%= render 'tcomments/comment'%>

</div>