<% if @ticket.errors.any? %>

  <h2 xmlns="http://www.w3.org/1999/html">The following errors prevented the ticket from getting created</h2>

  <ul>

    <% @ticket.errors.full_messages.each do |msg| %>

      <li><%= msg %></li>

    <% end %>

  </ul>

<% end %>
<div class='row'>

  <div class='col-xs-12'>

    <%= form_for(@ticket, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">

        <div class="control-label col-sm-2">

          <%= f.label :subject %>

        </div>

        <div class="col-sm-8">

          <%= f.text_field :subject, class: "form-control", placeholder: "Subject of Ticket", autofocus: true %>

        </div>

      </div>

      <div class="form-group">

        <div class="control-label col-sm-2">

          <%= f.label :content %>

        </div>

        <div class="col-sm-8">

          <%= f.text_area :content, rows: 10, class: "form-control", placeholder: "Body of your ticket" %>

        </div>

      </div>

      <div class="col-sm-8">

        <%= f.file_field :image, as: :attachinary,onchange: "validateFiles(this);",
                         data: { max_file_size: 2.megabytes} %>

      </div>


      <div class="form-group">

        <div class="col-sm-offset-2 col-sm-10">

          <%= f.submit class: 'btn btn-primary btn-lg' %>

        </div>

      </div>

    <% end %>

    <div class="col-xs-4 col-xs-offset-4">

      [ <%= link_to "Cancel request and return to home", root_path %> ]

    </div>

  </div>

</div>