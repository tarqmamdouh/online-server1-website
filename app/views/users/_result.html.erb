<% if params[:action]==='search' %>
  <div class="results-block">
    <%= bootstrap_flash %>
  </div>
<% end %>
<% if @users %>
  <% if @users.size >0 %>
    <div id="friend-lookup-results" class="well results-block col-md-10">
      <table class="search-results-table col-md-12">
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><strong>Username: </strong><%= user.username %></td>
            <td><strong>Name: </strong><%= user.name %></td>
            <td><strong>Email: </strong><%= user.email %></td>
            <td><strong>profile: </strong><%= link_to "View Profile","/users/"+user.username,class:"btn btn-xs btn-success" %>

            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
