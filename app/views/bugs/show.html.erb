<%= render 'layouts/adminNavbar'%>
<%= javascript_include_tag 'Attachments' %>
<%= javascript_include_tag 'init_attachinary' %>


<h2 align="center">Title: <%= @bug.title%></h2>




<div class="well col-xs-8 col-xs-offset-2">
  <% if @bug.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:</li>
          <li class="article-title">
            <%= link_to @bug.user.username %>

          </li>
          <li>his name:
            <%= @bug.name %>
         </li>
          <li>his username:
            <%= @bug.username %>
          </li>
          <li>his email:
            <%= @bug.email %>
          </li>
          <li>time of report:
            <%= @bug.created_at %>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="center description"><strong>Content:</strong></h4>
  <hr>
  <%= simple_format(@bug.details) %>
  <% if @bug.image.present? %>
    <%= cl_image_tag @bug.image.path, { size: '800x600', crop: :limit } %>
  <% end %>
  <div class="article-actions">

    <%= link_to "View all reported bugs", bugs_path, class: "btn btn-xs btn-success" %>
  </div>
  <%#comments %>

</div>